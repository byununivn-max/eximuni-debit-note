# ============================================================
# EXIMUNI ERP v2 Environment Variables
# ============================================================
# Copy this file to .env and fill in the values:
#   cp .env.example .env
# ============================================================

## PostgreSQL (Docker internal - new ERP tables)
POSTGRES_USER=eximuni
POSTGRES_PASSWORD=eximuni_pass
POSTGRES_DB=eximuni_db
DATABASE_URL=postgresql+asyncpg://eximuni:eximuni_pass@db:5432/eximuni_db
DATABASE_URL_SYNC=postgresql://eximuni:eximuni_pass@db:5432/eximuni_db
REDIS_URL=redis://redis:6379/0

## MSSQL (AWS external - legacy operational data)
## Leave MSSQL_USER empty to disable MSSQL connection
MSSQL_SERVER=54.180.220.143
MSSQL_DATABASE=UNI_DebitNote
MSSQL_USER=
MSSQL_PASSWORD=
MSSQL_DRIVER=ODBC Driver 18 for SQL Server

## Microsoft Azure AD (MSAL SSO)
## Leave AZURE_CLIENT_ID empty to use JWT-only authentication
AZURE_CLIENT_ID=
AZURE_TENANT_ID=
AZURE_CLIENT_SECRET=

## JWT (Development/Test fallback)
## IMPORTANT: Change this in production!
# JWT_SECRET_KEY=your-secure-random-key-here

## Backend (Application settings)
DEBUG=true

## Frontend (Vite)
VITE_API_BASE=http://localhost:8000
REACT_APP_API_URL=http://localhost:8000
VITE_AZURE_CLIENT_ID=
VITE_AZURE_TENANT_ID=
VITE_AZURE_REDIRECT_URI=http://localhost:3001
